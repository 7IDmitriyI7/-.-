using System;

namespace Задание5._5
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Введите x1 координату первой вершины");
            double x1 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Введите y1 координату второй вершины");
            double y1 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Введите x2 координату противоположной вершины");
            double x2 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Введите y2 координату противоположной вершины");
            double y2 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Введите x3 координату третьей вершины");
            double x3 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Введите y3 координату третьей вершины");
            double y3 = Convert.ToDouble(Console.ReadLine());
            if ((x1 == x2) && (y1 == y2) || (x1 == x3) && (y1 == y3) || (x3 == x2) && (y3 == y2)) //проверка на одинаковые вершины
            {
                Console.WriteLine("Неверно введены данные");
            }
            else
            {
                double S = 0.5 * Math.Abs((x2 - x1) * (y3 - y1) - (x3 - x1) * (y2 - y1));
                double AB, BC, AC, P;
                AB = Math.Sqrt(Math.Pow((x2 - x1), 2) + Math.Pow((y2 - y1), 2));
                AC = Math.Sqrt(Math.Pow((x3 - x1), 2) + Math.Pow((y3 - y1), 2));
                BC = Math.Sqrt(Math.Pow((x3 - x2), 2) + Math.Pow((y3 - y2), 2));
                P = AB + AC + BC;
                Console.WriteLine("Площадь= " + S);
                Console.WriteLine("Периметр= " + P);

            }
        }
    }
}
